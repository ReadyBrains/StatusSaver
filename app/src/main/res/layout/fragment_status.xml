<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.design.widget.TabLayout
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/status_tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabBackground="@drawable/tab_select">
            <android.support.design.widget.TabItem
                android:id="@+id/tab1"
                android:background="@drawable/border"
                style="@style/tab_item"
                android:icon="@drawable/tab_image_selector"
                />
            <android.support.design.widget.TabItem
                android:id="@+id/tab2"
                style="@style/tab_item"
                android:background="@drawable/border"
                android:icon="@drawable/tab_video_selector" />
        </android.support.design.widget.TabLayout>

        <com.example.apoorv.whatsapp.CustomViewPager
            android:id="@+id/status_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.example.apoorv.whatsapp.CustomViewPager>
    </LinearLayout>
</RelativeLayout>
